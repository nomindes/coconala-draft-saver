{
  "manifest_version": 2,
  "name": "Coconala Draft Saver",
  "version": "1.0.0",
  "description": "ココナラで下書き機能が使えるようになります。文章を途中で消しても復元できて便利です。",
  "author": "nomin",
  "permissions": [
    "storage",
    "*://coconala.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://coconala.com/talkrooms/*",
        "https://coconala.com/mypage/direct_message/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon-48.png"
  },
  "homepage_url": "https://github.com/nomin/coconala-draft-saver",
  "applications": {
    "gecko": {
      "id": "coconala-draft-saver@nomin.jp",
      "strict_min_version": "57.0"
    }
  }
}